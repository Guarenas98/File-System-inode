# options and such
CC     = gcc
OPTS   = -Wall -fpic
INCS   = 
LIBS   = 

# files we need
SRCS   = src/libfs.c 
OBJS   = obj/libfs.o
TARGET = shobj/libfs.so

all: $(TARGET)

clean:
	rm -f $(TARGET) $(OBJS)

$(OBJS): $(SRCS)
	$(CC) $(INCS) $(OPTS) -c $< -o $@

$(TARGET): $(OBJS)
	$(CC) -shared -o $(TARGET) $(OBJS) $(LIBS)

